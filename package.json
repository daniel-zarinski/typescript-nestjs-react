{
  "name": "scaffold",
  "version": "0.0.1",
  "description": "",
  "author": "",
  "private": true,
  "license": "UNLICENSED",
  "workspaces": [
    "apps/*",
    "libs/*"
  ],
  "scripts": {
    "prebuild": "rimraf dist",
    "build": "nest build api",
    "build:all": "yarn build && nest build shared && nest build database && nest build schema",
    "format": "prettier --write \"apps/**/*.ts\" \"libs/**/*.ts\"",
    "start": "yarn start:api",
    "start:web": "cd apps/web && yarn start",
    "web": "yarn start:web",
    "start:api": "nest start api --watch",
    "start:debug": "nest start api --debug --watch",
    "start:prod": "node dist/apps/api/main",
    "knex": "npx knex",
    "migration:create": "npx knex migrate:make",
    "migration:revert": "npx knex migrate:down",
    "migration:rollback": "npx knex migrate:rollback",
    "migration:latest": "npx knex migrate:latest",
    "lint": "eslint \"{src,apps,libs,test}/**/*.{ts,tsx}\"",
    "lint:fix": "yarn lint --fix",
    "services:start": "yarn service:start database",
    "services:stop": "yarn service:stop database",
    "service:start": "docker-compose up -d",
    "service:stop": "docker-compose stop",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:debug": "node --inspect-brk -r tsconfig-paths/register -r ts-node/register node_modules/.bin/jest --runInBand",
    "test:e2e": "jest --config ./apps/api/test/jest-e2e.json"
  },
  "dependencies": {
    "@nestjs/common": "^8.0.0",
    "@nestjs/config": "^1.0.1",
    "@nestjs/core": "^8.0.0",
    "@nestjs/jwt": "^8.0.0",
    "@nestjs/passport": "^8.0.1",
    "@nestjs/platform-express": "^8.0.0",
    "@willsoto/nestjs-objection": "^5.1.0",
    "add": "^2.0.6",
    "axios": "^0.21.4",
    "bcrypt": "^5.0.1",
    "class-transformer": "^0.4.0",
    "class-validator": "^0.13.1",
    "compression": "^1.7.4",
    "helmet": "^4.6.0",
    "knex": "^0.95.11",
    "lib": "^4.3.3",
    "lodash": "^4.17.21",
    "objection": "^2.2.16",
    "objection-unique": "^1.2.2",
    "passport": "^0.4.1",
    "passport-jwt": "^4.0.0",
    "passport-local": "^1.0.0",
    "pg": "^8.7.1",
    "reflect-metadata": "^0.1.13",
    "rimraf": "^3.0.2",
    "rxjs": "^7.2.0",
    "yarn": "^1.22.11",
    "yup": "^0.32.9"
  },
  "devDependencies": {
    "@nestjs/cli": "^8.0.0",
    "@nestjs/schematics": "^8.0.0",
    "@nestjs/testing": "^8.0.0",
    "@types/bcrypt": "^5.0.0",
    "@types/express": "^4.17.13",
    "@types/jest": "^26.0.24",
    "@types/knex": "^0.16.1",
    "@types/node": "^16.0.0",
    "@types/supertest": "^2.0.11",
    "@typescript-eslint/eslint-plugin": "^4.28.2",
    "@typescript-eslint/parser": "^4.28.2",
    "eslint": "^7.30.0",
    "eslint-config-prettier": "^8.3.0",
    "eslint-plugin-prettier": "^3.4.0",
    "jest": "27.0.6",
    "prettier": "^2.3.2",
    "supertest": "^6.1.3",
    "ts-jest": "^27.0.3",
    "ts-loader": "^9.2.3",
    "ts-node": "^10.0.0",
    "tsconfig-paths": "^3.10.1",
    "typescript": "^4.3.5"
  },
  "jest": {
    "moduleFileExtensions": [
      "js",
      "json",
      "ts"
    ],
    "rootDir": ".",
    "testRegex": ".*\\.spec\\.ts$",
    "transform": {
      "^.+\\.(t|j)s$": "ts-jest"
    },
    "collectCoverageFrom": [
      "**/*.(t|j)s"
    ],
    "coverageDirectory": "./coverage",
    "testEnvironment": "node",
    "roots": [
      "<rootDir>/libs/",
      "<rootDir>/apps/"
    ],
    "moduleNameMapper": {
      "^@lib/shared(|/.*)$": "<rootDir>/libs/shared/src/$1",
      "^@lib/database(|/.*)$": "<rootDir>/libs/database/src/$1",
      "^@lib/schema(|/.*)$": "<rootDir>/libs/schema/src/$1"
    }
  }
}
