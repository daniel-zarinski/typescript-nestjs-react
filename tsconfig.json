{
  "compilerOptions": {
    "module": "commonjs",
    "declaration": true,
    "removeComments": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "allowSyntheticDefaultImports": true,
    "strictNullChecks": true,
    "target": "es2017",
    "sourceMap": true,
    "outDir": "./dist",
    "baseUrl": "./",
    "incremental": true,
    "skipLibCheck": true,
    "paths": {
      "@lib/shared": ["libs/shared/src"],
      "@lib/shared/*": ["libs/shared/src/*"],
      "@lib/database": ["libs/database/src"],
      "@lib/database/*": ["libs/database/src/*"],
      "@lib/schema": ["libs/schema/src"],
      "@lib/schema/*": ["libs/schema/src/*"]
    }
  }
}
